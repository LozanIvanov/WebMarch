@model List<WEB.Database.Models.Category>;
@{
    Layout = "~/Views/SharedAdmin/_AdminLayout.cshtml";

}

<form method="post">
    <div class="col">
        <div class="row-cols-sm-4">
            <div>
                <labal>Category Name</labal>
                <input type="text" name="Name" class="form-control"/>
            </div>
            <div>
                <select name="ParentId" class="form-control">
                    <option>without</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>

        </div>
        <div class="col-sm-12" >
            <buton class="btn btn-info">Save</buton>
        </div>

    </div>
</form>